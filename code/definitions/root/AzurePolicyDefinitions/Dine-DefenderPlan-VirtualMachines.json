{
  "type": "Microsoft.Authorization/policyDefinitions",
  "name": "Dine-DefenderPlan-VirtualMachines",
  "properties": {
    "displayName": "Configure Microsoft Defender for Servers plan",
    "policyType": "Custom",
    "mode": "All",
    "description": "New capabilities are continuously being added to Defender for Servers, which may require the user's explicit enablement. Use this policy to make sure all new capabilities will be enabled.",
    "metadata": {
      "version": "1.0.0",
      "category": "Security Center"
    },
    "version": "1.0.0",
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      },
      "subPlan": {
        "type": "String",
        "metadata": {
          "displayName": "Defender for Servers plans",
          "description": "Select a Defender for Servers plan"
        },
        "allowedValues": [
          "P1",
          "P2"
        ],
        "defaultValue": "P2"
      },
      "isAgentlessVmScanningEnabled": {
        "type": "String",
        "metadata": {
          "displayName": "Agentless VM Scanning Enabled",
          "description": "Enable or disable the Agentless VM Scanning add-on feature"
        },
        "allowedValues": [
          "true",
          "false"
        ],
        "defaultValue": "true"
      },
      "isMdeDesignatedSubscriptionEnabled": {
        "type": "String",
        "metadata": {
          "displayName": "MDE Designated Subscription Enabled",
          "description": "Enable or disable the MDE Designated Subscription add-on feature"
        },
        "allowedValues": [
          "true",
          "false"
        ],
        "defaultValue": "false"
      },
      "isFileIntegrityMonitoringEnabled": {
        "type": "String",
        "metadata": {
          "displayName": "File Integrity Monitoring Enabled",
          "description": "Enable or disable the File Integrity Monitoring Subscription add-on feature"
        },
        "allowedValues": [
          "true",
          "false"
        ],
        "defaultValue": "false"
      },
      "logAnalyticsWorkspaceId": {
        "type": "String",
        "metadata": {
          "displayName": "Log Analytics Workspace ID",
          "description": "Select the Log Analytics workspace from the dropdown list",
          "strongType": "omsWorkspace",
          "assignPermissions": true
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Resources/subscriptions"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Security/pricings",
          "name": "VirtualMachines",
          "deploymentScope": "subscription",
          "existenceScope": "subscription",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/8e3af657-a8ff-443c-a75c-2fe8c4bcb635"
          ],
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Security/pricings/pricingTier",
                "equals": "Standard"
              },
              {
                "field": "Microsoft.Security/pricings/subPlan",
                "equals": "[parameters('subPlan')]"
              },
              {
                "count": {
                  "field": "Microsoft.Security/pricings/extensions[*]",
                  "where": {
                    "allOf": [
                      {
                        "field": "Microsoft.Security/pricings/extensions[*].name",
                        "equals": "AgentlessVmScanning"
                      },
                      {
                        "field": "Microsoft.Security/pricings/extensions[*].isEnabled",
                        "equals": "[if(equals(parameters('subPlan'), 'P2'), parameters('isAgentlessVmScanningEnabled'), 'false')]"
                      }
                    ]
                  }
                },
                "equals": 1
              },
              {
                "count": {
                  "field": "Microsoft.Security/pricings/extensions[*]",
                  "where": {
                    "allOf": [
                      {
                        "field": "Microsoft.Security/pricings/extensions[*].name",
                        "equals": "MdeDesignatedSubscription"
                      },
                      {
                        "field": "Microsoft.Security/pricings/extensions[*].isEnabled",
                        "equals": "[parameters('isMdeDesignatedSubscriptionEnabled')]"
                      }
                    ]
                  }
                },
                "equals": 1
              },
              {
                "count": {
                  "field": "Microsoft.Security/pricings/extensions[*]",
                  "where": {
                    "allOf": [
                      {
                        "field": "Microsoft.Security/pricings/extensions[*].name",
                        "equals": "FileIntegrityMonitoring"
                      },
                      {
                        "field": "Microsoft.Security/pricings/extensions[*].isEnabled",
                        "equals": "[parameters('isFileIntegrityMonitoringEnabled')]"
                      }
                    ]
                  }
                },
                "equals": 1
              }
            ]
          },
          "deployment": {
            "location": "westeurope",
            "properties": {
              "mode": "incremental",
              "parameters": {
                "subPlan": {
                  "value": "[parameters('subPlan')]"
                },
                "isAgentlessVmScanningEnabled": {
                  "value": "[parameters('isAgentlessVmScanningEnabled')]"
                },
                "isMdeDesignatedSubscriptionEnabled": {
                  "value": "[parameters('isMdeDesignatedSubscriptionEnabled')]"
                },
                "isFileIntegrityMonitoringEnabled": {
                  "value": "[parameters('isFileIntegrityMonitoringEnabled')]"
                },
                "logAnalyticsWorkspaceId": {
                  "value": "[parameters('logAnalyticsWorkspaceId')]"
                }
              },
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "subPlan": {
                    "type": "String"
                  },
                  "isAgentlessVmScanningEnabled": {
                    "type": "String"
                  },
                  "isMdeDesignatedSubscriptionEnabled": {
                    "type": "String"
                  },
                  "isFileIntegrityMonitoringEnabled": {
                    "type": "String"
                  },
                  "loganalyticsWorkspaceId": {
                    "type": "String"
                  }
                },
                "variables": {
                  "enabledFileIntegrityMonitoringExtension": {
                    "name": "FileIntegrityMonitoring",
                    "isEnabled": "true",
                    "additionalExtensionProperties": {
                      "DefinedWorkspaceId": "[parameters('logAnalyticsWorkspaceId')]"
                    }
                  },
                  "disabledFileIntegrityMonitoringExtension": {
                    "name": "FileIntegrityMonitoring",
                    "isEnabled": "false"
                  },
                  "fileIntegrityMonitoring": "[if(equals(parameters('isFileIntegrityMonitoringEnabled'),'true'), variables('enabledFileIntegrityMonitoringExtension'), variables('disabledFileIntegrityMonitoringExtension'))]"
                },
                "resources": [
                  {
                    "type": "Microsoft.Security/pricings",
                    "apiVersion": "2023-01-01",
                    "name": "VirtualMachines",
                    "properties": {
                      "pricingTier": "Standard",
                      "subPlan": "[parameters('subPlan')]",
                      "extensions": [
                        {
                          "name": "AgentlessVmScanning",
                          "isEnabled": "[parameters('isAgentlessVmScanningEnabled')]"
                        },
                        {
                          "name": "MdeDesignatedSubscription",
                          "isEnabled": "[parameters('isMdeDesignatedSubscriptionEnabled')]"
                        },
                        "[variables('fileIntegrityMonitoring')]"
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
